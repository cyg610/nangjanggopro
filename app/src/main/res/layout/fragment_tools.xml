<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    //상단바
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#9EBBD5"
        android:orientation="horizontal">

        //메뉴버튼
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <ImageView
                android:id="@+id/quickMenuBtn"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/menuimg" />
        </LinearLayout>

        //타이머 텍스트
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingRight="20dp"
                android:textSize="8pt"
                android:textColor="#FFFFFF"
                android:text="타이머"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:text="시간을 입력해 주세요"
        android:textSize="20dp"
        android:textColor="#000000"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"/>
    <LinearLayout


        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/timeMM"
            android:textSize="20dp"
            android:text="0"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="분"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <EditText
            android:text="0"
            android:id="@+id/timeSS"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="초"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

   <TextView
       android:background="@drawable/border"
       android:padding="20dp"
       android:layout_margin="20dp"
       android:layout_gravity="center_horizontal"
       android:id="@+id/timer"
       android:textSize="20dp"
       android:textColor="#6799FF"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"/>

    <LinearLayout
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_marginRight="10dp"
            android:background="@drawable/buttonlineblue"
            android:textColor="#9EBBD5"
            android:textStyle="bold"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:id="@+id/btn_start"
            android:text="시작"
            android:textSize="8pt"/>

        <Button
            android:layout_marginRight="10dp"
            android:background="@drawable/buttonlineblue"
            android:textColor="#9EBBD5"
            android:textStyle="bold"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:id="@+id/btn_finish"
            android:text="리셋"
            android:textSize="8pt"/>

    </LinearLayout>

</LinearLayout>

